#include <iostream>
#include <vector>
using namespace std;

int main (){
    int a,b,n;
    ios::sync_with_stdio(false);
    while ((cin>>a>>b>>n) && n!=0){
        dat.resize(50);
        dat[0]=dat[1]=1;
        int T=-1;
        for (int i=2;i<n;i++){
            dat[i]=(a*dat[i-1]+b*dat[i-2])%7;
            if (dat[i]==1 && dat[i-1]==1){
                T=i-1;
                // for (int i:dat)cout<<i<<'\t';
                // cout<<endl;
                break;
            }
        }
        if (T!=-1) cout<<dat[(n-1)%T]<<endl;
        else cout<<dat[n-1]<<endl;
    }
    return 0;
}
